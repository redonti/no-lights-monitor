FROM golang:1.24-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build outage service
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/outage ./cmd/outage

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /app

# Copy binary from builder
COPY --from=builder /app/outage .

EXPOSE 8090

CMD ["./outage"]
